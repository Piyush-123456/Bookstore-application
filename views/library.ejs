<%- include("partials/header") %>
<%- include("partials/nav") %>

<div class="container mt-4">
  <!-- Button Row -->
  <div class="row mb-3">
    <div class="col-auto">
      <a class="btn btn-primary text-white text-decoration-none" href="/create-book">
        Create Book
      </a>
    </div>
  </div>

  <!-- Cards Row -->
  <div class="row">
    <% readbooks.forEach((book) => { %>
      <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card h-100 shadow-sm">
          <img src="images/<%= book.posterurl %>" class="card-img-top" alt="Book Poster" style="height: 200px; object-fit: cover;">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title" style="font-family: 'Georgia', serif; font-size: 1.2rem;">
              <%= book.name %>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted" style="font-size: 1rem;">
              <%= book.authorname %>
            </h6>
            <p class="card-text flex-grow-1" style="font-size: 0.9rem;">
              <%= book.description %>
            </p>
            <a href="/details-book/<%= book._id %>" class="btn btn-primary mt-auto">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
